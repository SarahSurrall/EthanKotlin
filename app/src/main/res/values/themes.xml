<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.EthanApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_brown</item>
        <item name="colorPrimaryVariant">@color/dark_brown</item>
        <item name="colorOnPrimary">@color/grey_brown</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/li_brown</item>
        <item name="colorSecondaryVariant">@color/another_brown</item>
        <item name="colorOnSecondary">@color/grey_brown</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textAppearance">@style/textStyle</item>
        <item name="android:windowFullscreen">true</item>

    </style>



    <style name="Theme.EthanApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_brown</item>
        <item name="colorPrimaryVariant">@color/light_brown</item>
        <item name="colorOnPrimary">@color/grey_brown</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/li_brown</item>
        <item name="colorSecondaryVariant">@color/another_brown</item>
        <item name="colorOnSecondary">@color/grey_brown</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textAppearance">@style/textStyle</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.EthanApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_brown</item>
        <item name="colorPrimaryVariant">@color/light_brown</item>
        <item name="colorOnPrimary">@color/grey_brown</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/li_brown</item>
        <item name="colorSecondaryVariant">@color/another_brown</item>
        <item name="colorOnSecondary">@color/grey_brown</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textAppearance">@style/textStyle</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.EthanApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_brown</item>
        <item name="colorPrimaryVariant">@color/light_brown</item>
        <item name="colorOnPrimary">@color/grey_brown</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/li_brown</item>
        <item name="colorSecondaryVariant">@color/another_brown</item>
        <item name="colorOnSecondary">@color/grey_brown</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:windowFullscreen">true</item>
    </style>

</resources>