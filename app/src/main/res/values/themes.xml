<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EthanApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#e3d9a1</item>
        <item name="colorPrimaryVariant">#44371d</item>
        <item name="colorOnPrimary">#4f2f0f</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#d7c49d</item>
        <item name="colorSecondaryVariant">#9d8752</item>
        <item name="colorOnSecondary">#9d8752</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.EthanApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.EthanApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EthanApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>